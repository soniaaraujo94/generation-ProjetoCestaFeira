<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".acesso.cliente.PerfilUsuarioFragment">

    <ImageView
        android:id="@+id/toldo"
        android:layout_width="430dp"
        android:layout_height="82dp"
        android:scaleType="fitEnd"
        android:src="@drawable/toldo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/buttonConfig"
        android:layout_width="325dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:drawableStart="@drawable/ic_iconconfig"
        android:drawableEnd="@drawable/ic_iconpin"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Configurações"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#232121"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonEnd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonEnd"
        app:layout_constraintTop_toBottomOf="@+id/buttonEnd" />

    <TextView
        android:id="@+id/buttonSair"
        android:layout_width="325dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:drawableStart="@drawable/ic_iconsair"
        android:drawableEnd="@drawable/ic_iconpin"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Sair"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#232121"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonConfig"
        app:layout_constraintStart_toStartOf="@+id/buttonConfig"
        app:layout_constraintTop_toBottomOf="@+id/buttonConfig" />

    <TextView
        android:id="@+id/buttonEnd"
        android:layout_width="324dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:drawableStart="@drawable/ic_iconseta"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Endereços"
        android:textAlignment="viewStart"
        android:textColor="#232121"
        android:textSize="15sp"
        app:drawableEndCompat="@drawable/ic_iconpin"
        app:layout_constraintEnd_toEndOf="@+id/buttonDados"
        app:layout_constraintStart_toStartOf="@+id/buttonDados"
        app:layout_constraintTop_toBottomOf="@+id/buttonDados" />

    <TextView
        android:id="@+id/buttonDados"
        android:layout_width="324dp"
        android:layout_height="46dp"
        android:drawableStart="@drawable/ic_imagemuser"
        android:drawableEnd="@drawable/ic_iconpin"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Meu dados"
        android:textAlignment="viewStart"
        android:textColor="#232121"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/imageUser"
        tools:layout_editor_absoluteY="236dp" />

    <TextView
        android:id="@+id/nomeUsuario"
        android:layout_width="202dp"
        android:layout_height="38dp"
        android:layout_marginStart="32dp"
        android:gravity="center_vertical"
        android:text="Nome do Usuário"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageUser"
        app:layout_constraintStart_toEndOf="@+id/imageUser"
        app:layout_constraintTop_toTopOf="@+id/imageUser" />

    <ImageView
        android:id="@+id/imageUser"
        android:layout_width="60dp"
        android:layout_height="64dp"
        android:src="@drawable/imagemusuario"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182" />

    <View
        android:id="@+id/divider9"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:background="#E0F1F8"
        app:layout_constraintEnd_toEndOf="@+id/buttonDados"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/buttonDados"
        tools:layout_editor_absoluteY="298dp" />

    <View
        android:id="@+id/divider10"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:background="#E0F1F8"
        app:layout_constraintEnd_toEndOf="@+id/buttonDados"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/buttonDados"
        tools:layout_editor_absoluteY="375dp" />

    <View
        android:id="@+id/divider11"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:background="#E0F1F8"
        app:layout_constraintEnd_toEndOf="@+id/buttonDados"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/buttonDados"
        tools:layout_editor_absoluteY="452dp" />

</androidx.constraintlayout.widget.ConstraintLayout>